# Server Configuration
# API Server (api.eskisiniveryenisinial.com)
PORT=3000

# Frontend Server (test.eskisiniveryenisinial.com)
# Only needed if running server-frontend.js
FRONTEND_PORT=5500
FRONTEND_HOST=0.0.0.0
API_TARGET=http://localhost:3000

# Database Configuration
DB_HOST=your_database_host
DB_PORT=3306
DB_USER=your_database_user
DB_PASS=your_database_password
DB_NAME=your_database_name
DB_SSL=false

# JWT and Security
JWT_SECRET=your_jwt_secret_key_minimum_32_characters
ADMIN_KEY=your_admin_secret_key

# CORS Origins (comma-separated)
# Development: Local origins
# Production: Add your frontend domain
CORS_ORIGIN=https://test.eskisiniveryenisinial.com,http://localhost:5500,http://127.0.0.1:5500,http://localhost:3000

# Cookie Settings
# Development: false, Production: true
COOKIE_SECURE=false
# Production should use: lax or strict
COOKIE_SAMESITE=lax

# Business Logic Settings
FREE_LISTING_QUOTA=5
BUMP_DAYS=0
FEATURED_DAYS=7
HIGHLIGHT_DAYS=30

# Payment Configuration
PAY_PROVIDER=mock
ADMIN_EMAILS=your_admin_email@example.com
TRADE_EXCLUSIVE=true
PAYMENT_CURRENCY=TRY
PAYMENT_CURRENCY_SYMBOL=â‚º

# Cloudinary Configuration (Image hosting)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# OpenAI Configuration (AI features)
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o-mini

# AI Auto-Approval Configuration
AI_AUTO_APPROVE_ENABLED=true
AI_AUTO_APPROVE_THRESHOLD=85
AI_AUTO_REJECT_THRESHOLD=20