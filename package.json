{
  "type": "commonjs",
  "scripts": {
    "dev:api": "nodemon --ext js,json --watch backend --exec node server.js",
    "dev:web": "browser-sync start --server frontend/public --files 'frontend/public/**/*' --port 5500 --no-open",
    "dev:frontend": "nodemon --ext js,json,html,css --watch frontend --exec node server-frontend.js",
    "dev": "concurrently -n API,WEB -c green,cyan \"npm:dev:api\" \"npm:dev:web\"",
    "dev:clean": "npx kill-port 3000 5500 && npm run dev",
    "dev:prod": "concurrently -n API,FRONTEND -c green,blue \"npm:dev:api\" \"npm:dev:frontend\"",
    "dev:cpanel": "nodemon --ext js,json,html,css --watch backend --watch frontend --exec node server-cpanel.js",
    "start": "node server.js",
    "start:api": "node server.js",
    "start:frontend": "node server-frontend.js",
    "start:cpanel": "node server-cpanel.js",
    "start:clean": "npx kill-port 3000 && node server.js",
    "setup-db": "node database/setup.js",
    "css:build": "cross-env NODE_ENV=production postcss frontend/public/css/**/*.css --dir frontend/public/css/dist --ext .min.css",
    "css:watch": "cross-env NODE_ENV=production postcss frontend/public/css/**/*.css --dir frontend/public/css/dist --ext .min.css --watch",
    "css:dev": "postcss frontend/public/css/**/*.css --dir frontend/public/css/dist --ext .css",
    "build:css": "npm run css:build",
    "build": "npm run css:build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:api": "jest --testPathPattern=api"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "canvas": "^3.2.0",
    "claude": "^0.1.1",
    "cloudinary": "^2.7.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "glob": "^11.0.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "mysql2": "^3.10.3",
    "openai": "^5.23.0"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@types/jest": "^30.0.0",
    "autoprefixer": "^10.4.21",
    "axios": "^1.12.2",
    "browser-sync": "^3.0.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "cssnano": "^7.1.1",
    "jest": "^30.2.0",
    "kill-port": "^2.0.1",
    "node-fetch": "^3.3.2",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "supertest": "^7.1.4"
  }
}
